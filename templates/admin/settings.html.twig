{% extends 'base.html.twig' %}

{% block title %}Paramètres Généraux{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-header bg-danger text-white py-3 px-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
                            <i class="bi bi-sliders fs-4 text-white"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Paramètres</h4>
                            <small class="text-white-50">Règles de gestion de la bibliothèque</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5 bg-white">

                    {{ form_start(form) }}

                    <h6 class="text-danger fw-bold text-uppercase small mb-4 border-bottom pb-2">
                        <i class="bi bi-person-video2 me-2"></i>Règles Membres
                    </h6>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark">Quota d'emprunt</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-book"></i></span>
                            {{ form_widget(form.maxLivres, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-text">livres max</span>
                        </div>
                        <div class="form-text small">Nombre maximum de livres qu'un membre peut détenir simultanément.</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark">Durée des prêts</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-calendar-date"></i></span>
                            {{ form_widget(form.dureeEmprunt, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-text">jours</span>
                        </div>
                        <div class="form-text small">Délai accordé avant d'être considéré en retard.</div>
                    </div>

                    <h6 class="text-danger fw-bold text-uppercase small mb-4 mt-5 border-bottom pb-2">
                        <i class="bi bi-exclamation-triangle me-2"></i>Pénalités
                    </h6>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark">Amende journalière</label>
                        <div class="input-group">
                            {{ form_widget(form.montantPenalite, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-text">€ / jour</span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-danger btn-lg px-5 rounded-pill shadow-sm">
                            <i class="bi bi-save me-2"></i>Sauvegarder
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
