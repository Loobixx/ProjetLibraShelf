{% extends 'base.html.twig' %}

{% block title %}Modifier l'Exemplaire{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-5 mb-5">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                {# Modification #}
                <div class="card-header bg-warning bg-opacity-10 py-3 px-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-50 rounded-circle p-2 me-3">
                            <i class="bi bi-pencil-square fs-4 text-dark"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold text-dark">Modifier l'exemplaire</h4>
                            <small class="text-dark text-opacity-75">Mettez à jour l'état ou la cote</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 bg-white">

                    {# Rappel du Livre #}
                    <div class="alert alert-light border-start border-warning border-4 shadow-sm mb-4">
                        <h6 class="text-warning text-dark fw-bold mb-1 text-uppercase small ls-1">
                            <i class="bi bi-book me-2"></i>Livre concerné
                        </h6>
                        <p class="mb-0 text-dark lead fw-bold">{{ ouvrage.titre }}</p>
                    </div>

                    {{ form_start(form) }}

                    <div class="mb-4">
                        {# Cote #}
                        <div class="form-floating mb-3">
                            {{ form_widget(form.cote, {'attr': {'class': 'form-control', 'placeholder': 'Cote'}}) }}
                            {{ form_label(form.cote) }}
                        </div>

                        {# État #}
                        <div class="form-floating mb-3">
                            {{ form_widget(form.etat, {'attr': {'class': 'form-select', 'placeholder': 'État'}}) }}
                            {{ form_label(form.etat) }}
                        </div>
                    </div>

                    {# Zone Disponibilité #}
                    <div class="p-3 bg-light rounded border mb-4">
                        <div class="form-check form-switch">
                            {{ form_widget(form.disponible, {'attr': {'class': 'form-check-input', 'role': 'switch', 'style': 'cursor: pointer;'}}) }}

                            <label class="form-check-label fw-bold text-dark" for="{{ form.disponible.vars.id }}">
                                Cet exemplaire est-il disponible immédiatement ?
                            </label>
                            <div class="form-text small mt-1 text-muted">
                                <i class="bi bi-info-circle me-1"></i> Décochez si le livre est en réparation ou mis de côté.
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    {# Actions #}
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_ouvrage_show', {'id': ouvrage.id}) }}" class="btn btn-light border px-4 text-muted">
                            Annuler
                        </a>

                        <button type="submit" class="btn btn-warning btn-lg px-4 rounded-pill shadow-sm fw-bold">
                            <i class="bi bi-check-lg me-2"></i>Enregistrer les modifications
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>

                {# Suppression de l'exemplaire #}
                <div class="card-footer bg-light border-top p-3">
                    <div class="d-flex justify-content-center">
                        {{ include('exemplaire/_delete_form.html.twig') }}
                    </div>
                </div>

            </div>

        </div>
    </div>
{% endblock %}
