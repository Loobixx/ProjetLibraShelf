{% extends 'base.html.twig' %}

{% block title %}Mes Emprunts{% endblock %}

{% block body %}
    <div class="container mt-4 mb-5">

        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h1 class="h2 fw-bold text-primary mb-1">
                    <i class="bi bi-journal-bookmark-fill me-2"></i>Mon Espace Lecteur
                </h1>
                <p class="text-muted mb-0">Suivez vos emprunts en cours et votre historique.</p>
            </div>
            <a href="{{ path('app_catalog_index') }}" class="btn btn-primary rounded-pill px-4 shadow-sm">
                <i class="bi bi-plus-lg me-1"></i>Nouvel emprunt
            </a>
        </div>

        {# === 1. SECTION : EMPRUNTS EN COURS === #}
        <div class="card border-0 shadow-sm rounded-4 mb-5 overflow-hidden">
            <div class="card-header bg-white py-3 px-4 border-bottom">
                <h5 class="mb-0 fw-bold text-success">
                    <i class="bi bi-book-half me-2"></i>Emprunts en cours ({{ emprunts|length }})
                </h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">Livre</th>
                        <th>Dates</th>
                        <th>Délai</th>
                        <th class="text-end pe-4">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for resa in emprunts %}
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">{{ resa.ouvrage.titre }}</div>
                                <small class="text-muted">Cote : {{ resa.exemplaire.cote }}</small>
                            </td>
                            <td>
                                <div class="small text-success">
                                    <i class="bi bi-arrow-right-circle-fill me-1"></i> Pris le {{ resa.dateReservation|date('d/m/Y') }}
                                </div>
                                <div class="small fw-bold">
                                    <i class="bi bi-clock me-1"></i> À rendre le {{ resa.dateRetourPrevue|date('d/m/Y') }}
                                </div>
                            </td>
                            <td>
                                {% set jours = resa.joursRestants %}
                                {% if jours > 10 %}
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 rounded-pill">J-{{ jours }}</span>
                                {% elseif jours > 0 %}
                                    <span class="badge bg-warning text-dark border border-warning px-3 rounded-pill">J-{{ jours }}</span>
                                {% elseif jours == 0 %}
                                    <span class="badge bg-danger px-3 rounded-pill animate-pulse">Aujourd'hui !</span>
                                {% else %}
                                    {# 1. Affichage du badge de retard #}
                                    <span class="badge bg-danger px-3 rounded-pill">Retard : {{ jours|abs }}j</span>

                                    {# 2. Calcul du montant (Jours de retard positif * prix) #}
                                    {% set amende = (jours|abs) * montantPenalite %}

                                    {# 3. Affichage du prix juste en dessous #}
                                    <div class="mt-1 text-danger fw-bold small">
                                        <i class="bi bi-cash-coin me-1"></i>
                                        À régler : {{ amende|number_format(2, ',', ' ') }} €
                                    </div>
                                {% endif %}
                            </td>
                            <td class="text-end pe-4">
                                <a href="{{ path('app_catalog_rendre', {'id': resa.id}) }}"
                                   class="btn btn-outline-success btn-sm fw-bold px-3"
                                   onclick="return confirm('Rendre ce livre ?');">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Rendre
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                Vous n'avez aucun livre en votre possession actuellement.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# === 2. SECTION : LISTE D'ATTENTE === #}
        {% if attentes is not empty %}
            <div class="card border-0 shadow-sm rounded-4 mb-5 overflow-hidden bg-warning bg-opacity-10">
                <div class="card-header bg-transparent py-3 px-4 border-bottom border-warning border-opacity-25">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-hourglass-split me-2"></i>En liste d'attente ({{ attentes|length }})
                    </h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover align-middle mb-0 bg-transparent">
                        <tbody>
                        {% for resa in attentes %}
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">{{ resa.ouvrage.titre }}</div>
                                    <small class="text-muted">{{ resa.ouvrage.editeur }}</small>
                                </td>
                                <td>
                                <span class="text-muted small">
                                    Demandé le {{ resa.dateReservation|date('d/m/Y') }}
                                </span>
                                </td>
                                <td>
                                <span class="badge bg-warning text-dark border border-warning px-3 rounded-pill">
                                    En attente d'exemplaire
                                </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="{{ path('app_catalog_annuler', {'id': resa.id}) }}"
                                       class="btn btn-sm btn-outline-danger border-0"
                                       onclick="return confirm('Voulez-vous vraiment quitter la file d\'attente pour ce livre ?');">
                                        <i class="bi bi-x-circle me-1"></i> Annuler ma demande
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}

        {# === 3. SECTION : HISTORIQUE / ARCHIVES === #}
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-header bg-light py-3 px-4 border-bottom">
                <h5 class="mb-0 fw-bold text-secondary">
                    <i class="bi bi-archive me-2"></i>Historique des lectures
                </h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0 text-muted">
                    <thead class="bg-light small">
                    <tr>
                        <th class="ps-4">Livre</th>
                        <th>Période d'emprunt</th>
                        <th class="text-end pe-4">Statut</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for resa in archives %}
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark opacity-75">{{ resa.ouvrage.titre }}</div>
                                <small>Cote : {{ resa.exemplaire.cote }}</small>
                            </td>
                            <td>
                                <div class="d-flex flex-column small">
                                <span>
                                    <i class="bi bi-arrow-right me-2 text-muted"></i> Pris le : <strong>{{ resa.dateReservation|date('d/m/Y') }}</strong>
                                </span>
                                    <span class="text-primary mt-1">
                                    <i class="bi bi-check-all me-2"></i> Rendu le : <strong>{{ resa.dateRetourReelle|date('d/m/Y') }}</strong>
                                </span>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                            <span class="badge bg-secondary bg-opacity-10 text-secondary border px-3 rounded-pill">
                                Terminé
                            </span>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">
                                Aucun historique pour le moment.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
