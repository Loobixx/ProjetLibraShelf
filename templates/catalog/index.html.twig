{% extends 'base.html.twig' %}

{% block title %}Catalogue de la Bibliothèque{% endblock %}

{% block body %}
    <div class="container-fluid mt-4 mb-5">

        {# EN-TÊTE #}
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold text-primary">
                <i class="bi bi-book-half me-2"></i>Catalogue
            </h1>
            <p class="text-muted">Explorez notre collection et réservez vos prochaines lectures.</p>
        </div>

        {# BARRE DE FILTRES #}
        {% if formFilter is defined %}
            <div class="card border-0 shadow-sm mb-5 rounded-3 bg-white">
                <div class="card-body p-3">
                    {{ form_start(formFilter) }}
                    <div class="row g-2 align-items-center">
                        <div class="col-lg-4 col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                                {{ form_widget(formFilter.query, {'attr': {'class': 'form-control border-start-0 ps-0', 'placeholder': 'Rechercher un titre...'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">{{ form_widget(formFilter.categorie, {'attr': {'class': 'form-control', 'placeholder': 'Catégorie'}}) }}</div>
                        <div class="col-lg-2 col-md-3">{{ form_widget(formFilter.langue, {'attr': {'class': 'form-control', 'placeholder': 'Langue'}}) }}</div>
                        <div class="col-lg-2 col-md-6">{{ form_widget(formFilter.sort, {'attr': {'class': 'form-select'}}) }}</div>
                        <div class="col-lg-2 col-md-6">
                            <button type="submit" class="btn btn-primary w-100 fw-bold shadow-sm">Filtrer</button>
                        </div>
                        <div class="col-12 mt-2 d-flex justify-content-center">
                            <div class="form-check form-switch">
                                {{ form_widget(formFilter.disponible, {'attr': {'class': 'form-check-input me-2', 'role': 'switch'}}) }}
                                <label class="form-check-label text-muted small" for="{{ formFilter.disponible.vars.id }}">Afficher uniquement disponibles</label>
                            </div>
                        </div>
                    </div>
                    {{ form_end(formFilter) }}
                </div>
            </div>
        {% endif %}

        {# GRILLE DES RÉSULTATS #}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

            {% for ouvrage in ouvrages %}
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm hover-card rounded-4 overflow-hidden position-relative">
                        {% if userStatus[ouvrage.id] is defined %}
                            <div class="position-absolute top-0 end-0 p-3" style="z-index: 5;">
                                {% if userStatus[ouvrage.id] == 'emprunte' %}
                                    <span class="badge bg-primary shadow-sm border border-white">
                                    <i class="bi bi-check-circle-fill me-1"></i> DÉJÀ EMPRUNTÉ
                                </span>
                                {% elseif userStatus[ouvrage.id] == 'attente' %}
                                    <span class="badge bg-warning text-dark shadow-sm border border-white">
                                    <i class="bi bi-hourglass-split me-1"></i> EN LISTE D'ATTENTE
                                </span>
                                {% endif %}
                            </div>
                        {% endif %}

                        {# En-tête de carte #}
                        <div class="card-header border-0 bg-light py-3 px-4 d-flex justify-content-between align-items-center">
                            <small class="text-uppercase fw-bold text-muted ls-1" style="font-size: 0.75rem;">{{ ouvrage.categories|slice(0, 20) }}</small>
                            <span class="badge bg-white text-dark border shadow-sm rounded-pill">{{ ouvrage.annee }}</span>
                        </div>

                        <div class="card-body px-4 pt-4 pb-0 d-flex flex-column">
                            <h4 class="card-title fw-bold mb-1">
                                <a href="{{ path('app_catalog_show', {'id': ouvrage.id}) }}" class="text-dark text-decoration-none stretched-link">{{ ouvrage.titre }}</a>
                            </h4>
                            <p class="text-primary fw-semibold mb-3">
                                {% for auteur in ouvrage.auteurs %}
                                    {{ auteur.nom }} {{ auteur.prenom }}{% if not loop.last %}, {% endif %}
                                {% else %}Auteur inconnu{% endfor %}
                            </p>
                            <p class="card-text text-muted small flex-grow-1" style="line-height: 1.6;">{{ ouvrage.resume|slice(0, 120) }}...</p>
                            <div class="mt-3 mb-4">
                                {% if ouvrage.tags %}<small class="text-muted"><i class="bi bi-tags me-1"></i> {{ ouvrage.tags|slice(0, 30) }}...</small>{% endif %}
                            </div>
                        </div>

                        {# Pied de carte #}
                        <div class="card-footer bg-white border-0 px-4 pb-4 pt-0">
                            <hr class="text-muted opacity-10 mb-3">
                            <div class="d-flex justify-content-between align-items-center">

                                {# Disponibilité #}
                                {% if ouvrage.isDisponible() %}
                                    <div class="text-success fw-bold small"><i class="bi bi-check-circle-fill me-1"></i> Disponible</div>
                                {% else %}
                                    <div class="text-warning fw-bold small"><i class="bi bi-hourglass-split me-1"></i> Liste d'attente</div>
                                {% endif %}

                                {# BOUTONS D'ACTION #}
                                <div style="position: relative; z-index: 2;">
                                    {% if userStatus[ouvrage.id] is defined %}
                                        <button class="btn btn-light btn-sm rounded-pill px-3 border" disabled>
                                            <i class="bi bi-check2"></i> Vous l'avez
                                        </button>
                                    {% else %}
                                        {% if ouvrage.isDisponible() %}
                                            <a href="{{ path('app_catalog_reserver', {'id': ouvrage.id}) }}" class="btn btn-outline-primary btn-sm rounded-pill px-3 fw-bold">Emprunter</a>
                                        {% else %}
                                            <a href="{{ path('app_catalog_reserver', {'id': ouvrage.id}) }}" class="btn btn-warning btn-sm rounded-pill px-3 text-dark fw-bold shadow-sm">Rejoindre la file</a>
                                        {% endif %}
                                    {% endif %}
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <div class="text-muted">
                        <i class="bi bi-search fs-1 d-block mb-3"></i>
                        <p class="fs-5">Aucun livre ne correspond à votre recherche.</p>
                        <a href="{{ path('app_catalog_index') }}" class="btn btn-outline-secondary mt-2">Réinitialiser</a>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
