<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}LibraShelf{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top mb-4">
    <div class="container-fluid px-4">

        <a class="navbar-brand d-flex align-items-center" href="{{ path('homepage') }}">
            <i class="bi bi-book-half me-2"></i>LibraShelf
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                </li>

                {# === CATALOGUE === #}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_catalog_index') }}">
                        Catalogue
                    </a>
                </li>

                {# === MES RESERVATIONS === #}
                {% if is_granted('ROLE_MEMBER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_catalog_mes_reservations') }}">
                            Mes Réservations
                        </a>
                    </li>
                {% endif %}

                {# === LIBRAIRE === #}
                {% if is_granted('ROLE_LIBRARIAN') %}
                    <li class="nav-item ms-lg-2">
                        <a class="nav-link text-info" href="{{ path('app_ouvrage_index') }}">
                            <i class="bi bi-box-seam me-1"></i> Gestion Stock
                        </a>
                    </li>
                {% endif %}

                {# === ADMIN === #}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item ms-lg-2">
                        <a class="nav-link text-danger" href="{{ path('app_admin_settings') }}">
                            <i class="bi bi-shield-lock-fill me-1"></i> Admin
                        </a>
                    </li>
                {% endif %}
            </ul>

            <ul class="navbar-nav ms-auto align-items-lg-center">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle fs-5 me-2"></i> {{ app.user.email }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                            <li><h6 class="dropdown-header">Mon Compte</h6></li>
                            <li><a class="dropdown-item" href="#">Mon Profil</a></li>
                            {% if is_granted('ROLE_MEMBER') %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_catalog_mes_reservations') }}">
                                        Mes Réservations
                                    </a>
                                </li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item mt-2 mt-lg-0 ms-lg-2">
                        <a class="btn btn-primary btn-sm px-3 rounded-pill" href="{{ path('app_register') }}">S'inscrire</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<main class="container">

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {% set alertClass = 'info' %}
            {% set icon = 'info-circle' %}

            {% if label == 'success' %}
                {% set alertClass = 'success' %}
                {% set icon = 'check-circle' %}
            {% elseif label == 'danger' or label == 'error' %}
                {% set alertClass = 'danger' %}
                {% set icon = 'exclamation-triangle' %}
            {% elseif label == 'warning' %}
                {% set alertClass = 'warning' %}
                {% set icon = 'exclamation-circle' %}
            {% endif %}

            <div class="alert alert-{{ alertClass }} alert-dismissible fade show shadow-sm d-flex align-items-center" role="alert">
                <i class="bi bi-{{ icon }}-fill fs-4 me-3"></i>
                <div>{{ message }}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>

<footer class="text-center text-muted mt-5 border-top pt-4">
    <div class="container">
        <p class="mb-1">&copy; {{ "now"|date("Y") }} <strong>LibraShelf</strong></p>
        <small>Gestion de bibliothèque moderne</small>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}
    {{ importmap('app') }}
{% endblock %}
</body>
</html>
