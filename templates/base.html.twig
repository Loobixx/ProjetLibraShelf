<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}LibraShelf{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- 1. BOOTSTRAP (CSS) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- 2. BOOTSTRAP ICONS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- 3. POLICE PRO (Inter) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Barre de navigation */
        .navbar { padding-top: 0.8rem; padding-bottom: 0.8rem; }
        .navbar-brand {
            font-weight: 700;
            font-size: 1.25rem;
            letter-spacing: -0.5px;
        }

        /* Lien actif */
        .nav-link.active { font-weight: 600; color: white !important; }

        main { flex: 1; }
        footer { margin-top: auto; padding: 2rem 0; background-color: #e9ecef; }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

<!-- BARRE DE NAVIGATION -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-4">
    <div class="container">

        <!-- LOGO -->
        <a class="navbar-brand d-flex align-items-center" href="{{ path('homepage') }}">
            <i class="bi bi-book-half me-2"></i>LibraShelf
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                </li>

                {# === MENU ADMIN === #}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('app_admin_settings') }}">
                            <i class="bi bi-gear-fill me-1"></i> Administration
                        </a>
                    </li>
                {% endif %}

                {# === MENU LIBRAIRE === #}
                {% if is_granted('ROLE_LIBRAIRE') or is_granted('ROLE_LIBRARIAN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_ouvrage_index') }}">
                            Gestion Libraire
                        </a>
                    </li>
                {% endif %}

                {# === MENU MEMBRE === #}
                {% if is_granted('ROLE_MEMBRE') or is_granted('ROLE_MEMBER') or is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_catalog_index') }}">
                            <i class="bi bi-collection me-1"></i> Catalogue
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_catalog_mes_reservations') }}">
                            <i class="bi bi-calendar-check me-1"></i> Mes Réservations
                        </a>
                    </li>
                {% endif %}
            </ul>

            <!-- Partie Droite (Compte Utilisateur) -->
            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i> {{ app.user.userIdentifier }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Déconnexion</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                    <li class="nav-item"><a class="btn btn-primary btn-sm ms-2" href="{{ path('app_register') }}">S'inscrire</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<!-- CONTENU DES PAGES -->
<main class="container">

    <!-- Alertes Flash -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {% set alertColor = 'success' %}
            {% if label == 'danger' or label == 'error' %}
                {% set alertColor = 'danger' %}
            {% elseif label == 'warning' %}
                {% set alertColor = 'warning' %}
            {% elseif label == 'info' %}
                {% set alertColor = 'info' %}
            {% endif %}

            <div class="alert alert-{{ alertColor }} alert-dismissible fade show shadow-sm border-start border-5 border-{{ alertColor }}">
                {% if alertColor == 'danger' %}<i class="bi bi-exclamation-triangle-fill me-2"></i>
                {% elseif alertColor == 'success' %}<i class="bi bi-check-circle-fill me-2"></i>
                {% elseif alertColor == 'warning' %}<i class="bi bi-exclamation-circle-fill me-2"></i>
                {% endif %}

                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>

<!-- PIED DE PAGE -->
<footer class="text-center text-muted mt-5 border-top">
    <small>&copy; {{ "now"|date("Y") }} LibraShelf - Gestion de bibliothèque</small>
</footer>

<!-- JS BOOTSTRAP -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
