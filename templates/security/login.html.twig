{% extends 'base.html.twig' %}

{% block title %}Connexion - LibraShelf{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg">

                    {# En-tête bleu #}
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h3 class="font-weight-light my-2">Connexion</h3>
                    </div>

                    <div class="card-body p-5">
                        <form method="post">

                            {# Gestion des erreurs (Mot de passe incorrect, etc.) #}
                            {% if error %}
                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                </div>
                            {% endif %}

                            {# Si l'utilisateur est déjà connecté #}
                            {% if app.user %}
                                <div class="alert alert-info mb-3">
                                    Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="username" class="form-label">Email</label>
                                {# Important : value="{{ last_username }}" permet de remettre l'email en cas d'erreur #}
                                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" placeholder="exemple@email.com" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Mot de passe</label>

                                <div class="input-group">
                                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" placeholder="Votre mot de passe" required>

                                    {# LE BOUTON OEIL #}
                                    <button class="btn btn-outline-secondary toggle-password" type="button">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                            </div>

                            {# Token CSRF de sécurité #}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {# Checkbox "Se souvenir de moi" #}
                            <div class="form-check mb-3">
                                <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                                <label for="_remember_me" class="form-check-label">Se souvenir de moi</label>
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    Se connecter
                                </button>
                            </div>
                        </form>
                    </div>

                    {# Pied de page avec lien inscription #}
                    <div class="card-footer text-center py-3 bg-light">
                        <div class="small">
                            <a href="{{ path('app_register') }}">Pas encore de compte ? Inscrivez-vous !</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
